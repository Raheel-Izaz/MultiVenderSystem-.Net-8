@model IEnumerable<Vendor>

@{
    ViewData["Title"] = "Pending Vendors";
}

<h2>Pending Vendors</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.UserId</td>
                <td>@vendor.Status</td>
                <td>
                    <form asp-action="ApproveVendor" asp-route-id="@vendor.Id" method="post">
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
